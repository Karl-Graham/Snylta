@model Thing

<div class="card d-inline-block" aria-disabled="true" style="width: 18rem; height: 24rem;">

    <div class="card-img-top">
        <div id="@Model.Name" class="carousel slide" data-ride="carousel" data-interval="false">
            <div class="carousel-inner">
                @{int i = 0;}
                @foreach (var item in Model.ThingPics)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100 rounded-top" src="~/thingimages/@item.Pic" width="200" height="200" />

                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100 rounded-top" src="~/thingimages/@item.Pic" width="200" height="200" />
                        </div>
                    }
                    i++;
                }
                @if (Model.ThingPics.Count() == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100 rounded-top" src="~/images/fallback.jpg" width="200" height="200" />
                    </div>
                }
            </div>
            @if (Model.ThingPics.Count > 1)
            {
                <a class="carousel-control-prev" href="#@Model.Name" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#@Model.Name" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            }
        </div>
    </div>

    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
    </div>
</div>

