                                            {
                                                if (counter == 0)
                                                {
                                                    <div class="carousel-item active">
                                                        <img class="d-block w-100" src="~/thingimages/@item.Pic.Insert(item.Pic.Length - 4, "_thumb")" />

                                                    </div>
